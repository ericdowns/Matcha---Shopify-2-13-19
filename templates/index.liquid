          <div class="column60 cerimonial-grade">
            <div class="featured-tea-img">{{ 'featured-tea.svg' | asset_url | img_tag }}</div>
            <div class="text-wrapper">
              <a href="/{{ settings.home_product-promotion_link }}"><h2>{{ settings.home_product-promotion_title_text }}</h2></a>
